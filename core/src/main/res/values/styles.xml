<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textRegular">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="textRegular.12">
        <item name="android:textSize">@dimen/dimen_12sp</item>
    </style>

    <style name="textRegular.14">
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>

    <style name="textRegular.24">
        <item name="android:textSize">@dimen/dimen_24sp</item>
    </style>

    <style name="textRegular.24.Link">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="buttonRegular">
        <item name="android:layout_marginLeft">@dimen/dimen_32dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_32dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_32dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
